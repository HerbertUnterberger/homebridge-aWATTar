{
    "pluginAlias": "Nordpool",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "area": {
                "title": "Nordpool Market Area",
                "type": "string",
                "required": true,
                "default": "LT",
                "oneOf": [
                    {
                        "title": "Lithuania",
                        "enum": ["LT"]
                    },
                    {
                        "title": "Latvia",
                        "enum": ["LV"]
                    },
                    {
                        "title": "Estonia",
                        "enum": ["EE"]
                    },
                    {
                        "title": "Finland",
                        "enum": ["Fi"]
                    }
                ]
            },
            "decimalPrecision": {
                "title": "Price Decimal Precision",
                "description": "This parameter is used for hourly price and median calculations.",
                "type": "integer",
                "required": false,
                "default": 0,
                "oneOf": [
                    {
                        "title": "0 Decimal (Default) - i.e. 4",
                        "enum": [0]
                    },
                    {
                        "title": "1 Decimal - i.e. 4.6",
                        "enum": [1]
                    },
                    {
                        "title": "2 Decimal - i.e. 4.68",
                        "enum": [2]
                    }
                ]
            },
            "excessivePriceMargin": {
                "title": "Excessive Price Margin Above Median",
                "description": "Percentage value used as margin to calculate highest price(s) of the day. Default 200 (percent)",
                "required": false,
                "default": 200,
                "type": "integer",
                "minimum": 50,
                "maximum": 400
            }
        }
    }
}
